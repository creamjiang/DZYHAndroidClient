<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff4f4f4"
    android:orientation="horizontal"
    android:paddingBottom="11.299988dip"
    android:paddingLeft="15.0dip"
    android:paddingTop="12.0dip" >

    <TextView
        android:id="@id/order_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易流水号："
        android:textColor="#ff4a4a4a"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_id_label"
        android:textColor="#ff4a4a4a"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/order_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/order_id_label"
        android:layout_below="@id/order_id_label"
        android:layout_marginTop="8.0dip"
        android:text="订单号："
        android:textColor="#ff4a4a4a"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/order_no"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/order_no_label"
        android:layout_toRightOf="@id/order_id_label"
        android:textColor="#ff4a4a4a"
        android:textSize="14.0dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff0000"
            android:textSize="14.0dip" />

        <TextView
            android:id="@id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:textColor="#fff17e00"
            android:textSize="20.0dip" />
    </LinearLayout>

</RelativeLayout>