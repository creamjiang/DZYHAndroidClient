<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6.0dip"
    android:paddingTop="2.0dip" >

    <ImageView
        android:id="@id/ticket_image"
        android:layout_width="70.0dip"
        android:layout_height="78.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:src="@drawable/store" />

    <TextView
        android:id="@id/ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_toRightOf="@id/ticket_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff5d880a"
        android:textSize="15.0dip" />

    <TextView
        android:id="@id/ticket_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticket_name"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/ticket_image"
        android:textColor="#ff555555"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/ticket_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticket_deadline"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/ticket_image"
        android:textColor="#ff555555"
        android:textSize="14.0dip" />

</RelativeLayout>