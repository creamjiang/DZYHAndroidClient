<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.dld.coupon.view.AddressList
        android:id="@id/addresslist"
        android:layout_width="140.0dip"
        android:layout_height="wrap_content"
        android:background="#ffffffe0"
        android:cacheColorHint="#ffffffe0"
        android:childDivider="@drawable/line"
        android:divider="@drawable/line"
        android:dividerHeight="1.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:id="@id/scrolling_district"
        android:layout_width="140.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/list_header_bg_0"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@id/city_item_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/down_small" />
    </LinearLayout>

</FrameLayout>