        </LinearLayout>

        <LinearLayout
            android:id="@id/yindao_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/yindao_3" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/yindao_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/yindao_4" />
        </LinearLayout>
    </com.dld.android.view.DragViewGroup>

</LinearLayout>